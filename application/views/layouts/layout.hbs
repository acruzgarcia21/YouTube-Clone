<!DOCTYPE html>
<html lang="en">
{{log this}}

<head>
  <meta charset="UTF-8" />
  <title>{{title}}</title>
  <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">

  <!-- Core CSS -->
  <link rel="stylesheet" href="/public/css/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <!-- Dynamic CSS Files -->
  {{#each css}}
    <link rel="stylesheet" href="/public/css/{{this}}">
  {{/each}}

  <!-- Core JS -->
  <script defer src="/public/js/sidebar-toggle.js"></script>
  <script defer src="/public/js/r.js"></script>

  <!-- Dynamic JS Files -->
  {{#each js}}
    <script defer src="/public/js/{{this}}"></script>
  {{/each}}
</head>

<body class="d-flex flex-column min-vh-100 bg-dark text-white">
  <div class="d-flex flex-grow-1">
    {{> header}} <!-- Sidebar -->
    <div class="flex-grow-1 d-flex flex-column">
      {{{body}}}
      {{> footer}}
    </div>
  </div>
</body>

</html>

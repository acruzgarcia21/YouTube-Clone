<div class="wrapper d-flex">
  <div class="content flex-grow-1 p-4">
    <main>
      {{> search}}

      <!-- Profile Header -->
      <header class="d-flex align-items-center mb-4">
        <div class="rounded-circle bg-secondary d-flex justify-content-center align-items-center"
          style="width: 80px; height: 80px; font-size: 2.5rem; color: white; user-select:none;">
          {{user.username.[0]}}
        </div>
        <div class="ms-3" "text-white">
          <h2 class="mb-0">{{user.username}}</h2>
          <p class="mb-0">{{user.email}}</p>
        </div>
      </header>

      <!-- Profile Content Card -->
      <div class="card bg-dark border-secondary mx-auto" style="max-width: 700px;">
        <div class="card-body">
          <h5 class="card-title text-white mb-3">About</h5>
          <p class="text-muted">Welcome to your profile page! You can customize this area with more info about yourself.
          </p>

          <hr class="border-secondary">

          <div class="row text-white">
            <!-- Add more user stats or info here if needed -->
          </div>
        </div>
        <!-- Inside your card body, below user info -->
        <form action="/users/profile/upload" method="POST" enctype="multipart/form-data" class="mb-3">
          <label for="profileImage" class="form-label text-white">Upload Profile Picture</label>
          <input type="file" name="profileImage" id="profileImage" accept="image/*" class="form-control mb-2"
            required />
          <button type="submit" class="btn btn-primary">Upload</button>
        </form>

      </div>


    </main>
  </div>
</div>
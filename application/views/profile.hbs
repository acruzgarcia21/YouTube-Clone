<div class="wrapper d-flex">
  <div class="content flex-grow-1 p-4">
    <main>
      <header>
        <h2 class="text-white mb-4">Your Profile</h2>
      </header>

      <div class="page-wrapper">
        <div class="form-card mx-auto" style="max-width: 400px;">
          {{#if success}}
            <div class="alert alert-success">{{success}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}

          <div class="mb-3">
            <label class="form-label text-white">Username</label>
            <input type="text" class="form-control" value="{{user.username}}" readonly />
          </div>

          <div class="mb-3">
            <label class="form-label text-white">Email</label>
            <input type="email" class="form-control" value="{{user.email}}" readonly />
          </div>

          <div class="mb-3">
            <label class="form-label text-white">User ID</label>
            <input type="text" class="form-control" value="{{user.user_id}}" readonly />
          </div>

          <form action="/users/logout" method="POST" class="mt-3">
            <button type="submit" class="btn btn-danger w-100">Log Out</button>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>
